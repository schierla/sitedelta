{
	"manifest_version": 2,
	"name": "__MSG_highlightExtensionName__",
	"version": "0.14.3",
	
	"default_locale": "en",
	"description": "__MSG_highlightExtensionDescription__",
	"icons": {
		"16": "common/icons/neutral-16.png",
		"24": "common/icons/neutral-24.png",
		"32": "common/icons/neutral-32.png",
		"48": "common/icons/neutral-48.png",
		"64": "common/icons/neutral-64.png"
	},

	"applications": {
		"gecko": {
			"id": "sitedelta-highlight@schierla.de"
		}
	},
	
	"permissions": [
		"activeTab", 
		"storage",
		"unlimitedStorage",
		"notifications",
		"contextMenus"
	],

	"optional_permissions": [
		"webNavigation",
		"<all_urls>"
	],
	
	"browser_action": {
		"default_icon": {
			"16": "common/icons/neutral-16.png",
			"24": "common/icons/neutral-24.png",
			"32": "common/icons/neutral-32.png",
			"48": "common/icons/neutral-48.png",
			"64": "common/icons/neutral-64.png"
		},
		"default_title": "__MSG_highlightExtensionName__",
		"default_popup": "popup.htm",
		"browser_style": true
	},

	"options_ui": {
		"page": "options.htm",
		"browser_style": true
	},

	"sidebar_action": {
		"default_icon": {
			"16": "common/icons/neutral-16.png",
			"24": "common/icons/neutral-24.png",
			"32": "common/icons/neutral-32.png",
			"48": "common/icons/neutral-48.png",
			"64": "common/icons/neutral-64.png"
		},
		"default_panel": "highlight/pages.htm",
		"browser_style": true
	},
	
	"background": {
		"scripts": [
			"common/scripts/ioUtils.js", 
			"common/scripts/textUtils.js", 
			"common/scripts/configUtils.js", 			
			"common/scripts/tabUtils.js", 
			"common/scripts/pageUtils.js", 
			"common/scripts/watchUtils.js", 
			"scripts/background.js"
		]
	}
}