{
  "compilerOptions": {
    "outDir": "build/typescript",
    "strictNullChecks": true,
    "module": "none",
    "target": "es2017",
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@sitedelta/common/src/view",
    "moduleResolution": "node",
    "paths": {
      "@sitedelta/common/*": ["./common/*"]
    },
    "types": ["chrome"]
  },
  "include": [
    "common/src/*",
    "common/src/*",
    "watch/src/*",
    "highlight/src/*"
  ]
}
