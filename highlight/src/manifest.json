{
	"manifest_version": 2,
	"name": "__MSG_highlightExtensionName__",
	"version": "0.30.0",
	"default_locale": "en",
	"description": "__MSG_highlightExtensionDescription__",
	"icons": {
		"16": "icons/highlight-16.png",
		"24": "icons/highlight-24.png",
		"32": "icons/highlight-32.png",
		"48": "icons/highlight-48.png",
		"64": "icons/highlight-64.png",
		"128": "icons/highlight-128.png"
	},
	"applications": {
		"gecko": {
			"id": "sitedelta-highlight@schierla.de"
		}
	},
	"permissions": [
		"activeTab",
		"storage",
		"unlimitedStorage",
		"contextMenus"
	],
	"optional_permissions": [
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": { "64": "icons/highlight.svg" },
		"theme_icons": [ {"dark": "icons/highlight.svg", "light": "icons/highlight-w.svg", "size": 64} ],
		"default_title": "__MSG_highlightExtensionName__", 
		"default_popup": "popup.htm",
		"browser_style": true
	},
	"options_ui": {
		"page": "options.htm",
		"browser_style": true
	},
	"sidebar_action": {
		"default_icon": "icons/highlight.svg",
		"default_panel": "pages.htm",
		"browser_style": true
	},
	"background": {
		"scripts": ["scripts/background.js"]
	}
}