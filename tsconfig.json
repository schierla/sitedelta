{
  "compilerOptions": {
    "outDir": "build/typescript",
    "strictNullChecks": true,
    "module": "none",
    "target": "es2017",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "paths": {
      "@sitedelta/common/*": ["./common/*"]
    },
    "types": ["chrome"]
  },
  "include": [
    "svg.d.ts",
    "common/src/scripts/*",
    "watch/src/scripts/*",
    "highlight/src/scripts/*"
  ]
}
