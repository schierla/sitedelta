{
	"manifest_version": 2,
	"name": "__MSG_highlightExtensionName__",
	"version": "0.14.0",
	
	"default_locale": "en",
	"description": "__MSG_highlightExtensionDescription__",
	"icons": {
		"48": "common/icons/neutral.svg"
	},
	
	"permissions": [
		"activeTab", 
		"webNavigation",
		"storage",
		"notifications",
		"contextMenus",
		"*://*/"
	],
	
	"browser_action": {
		"default_icon": "common/icons/neutral.svg",
		"default_title": "__MSG_highlightExtensionName__",
		"default_popup": "popup/highlight.htm",
		"browser_style": true
	},

	"options_ui": {
		"page": "pages/manageHighlight.htm",
		"browser_style": true
	},
	
	"background": {
		"scripts": [
			"common/scripts/ioUtils.js", 
			"common/scripts/textUtils.js", 
			"common/scripts/defaultConfig.js", 			
			"common/scripts/tabController.js", 
			"common/scripts/pageController.js", 
			"common/scripts/watchController.js", 
			"scripts/background.js"
		]
	}

}