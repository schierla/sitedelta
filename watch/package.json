{
    "name": "@sitedelta/watch",
    "version": "0.30.0",
    "private": true,
    "dependencies": {
        "@sitedelta/common": "workspace:^",
        "@xmldom/xmldom": "^0.8.0",
        "parse5": "^6.0.1",
        "query-selector": "^2.0.0",
        "xmlserializer": "^0.6.1",
        "xpath": "^0.0.32"
    },
    "scripts": {
        "watch": "nodemon -w src -w ../common/src -e \"ts,html,js\" -x \"yarn snowpack build\"",
        "dev:ff": "ncp src/firefox.manifest.json src/manifest.json && snowpack build && web-ext run -s dist",
        "dev:ch": "ncp src/chrome.manifest.json src/manifest.json && snowpack build && web-ext run -t chromium -s dist"
    },
    "devDependencies": {
        "@types/parse5": "^6.0.3",
        "@types/xmlserializer": "^0.6.2",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.15",
        "snowpack": "^3.8.8",
        "web-ext": "^6.6.0"
    }
}
