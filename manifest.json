{
	"manifest_version": 2,
	"name": "SiteDelta",
	"version": "0.1",
	
	"description": "Highlights changes made to a website since last visit",
	"icons": {
		"48": "icons/delta.png"
	},
	
	"permissions": [
		"activeTab", 
		"storage",
		"webNavigation",
		"*://*/"
	],
	
	"browser_action": {
		"browser_style": true,
		"default_icon": "icons/neutral.svg",
		"default_title": "SiteDelta WebExt",
		"default_popup": "popup/popup.htm"
	},
	
	"page_action": {
		"browser_style": true,		
		"default_icon": "icons/changed.svg",
		"default_title": "Watched Page",
		"default_popup": "popup/pagepopup.htm"
	},
	
	"background": {
		"scripts": ["includes/io.js", "background/backgroundscript.js"]
	}

}