{
	"manifest_version": 2,
	"name": "__MSG_watchExtensionName__",
	"version": "0.14.3",
	
	"default_locale": "en",
	"description": "__MSG_watchExtensionDescription__",
	"icons": {
		"16": "common/icons/watch-16.png",
		"24": "common/icons/watch-24.png",
		"32": "common/icons/watch-32.png",
		"48": "common/icons/watch-48.png",
		"64": "common/icons/watch-64.png"
	},
	
	"applications": {
		"gecko": {
			"id": "sitedelta-watch@schierla.de"
		}
	},

	"permissions": [
		"notifications",
		"activeTab", 
		"storage",
		"alarms",
		"<all_urls>"
	],
	
	"browser_action": {
		"browser_style": true,		
		"default_icon": {
			"16": "common/icons/watch-16.png",
			"24": "common/icons/watch-24.png",
			"32": "common/icons/watch-32.png",
			"48": "common/icons/watch-48.png",
			"64": "common/icons/watch-64.png"
		},
		"default_title": "__MSG_watchExtensionName__",
		"default_popup": "popup/watch.htm"
	},
	
	"sidebar_action": {
		"default_icon": {
			"16": "common/icons/neutral-16.png",
			"24": "common/icons/neutral-24.png",
			"32": "common/icons/neutral-32.png",
			"48": "common/icons/neutral-48.png",
			"64": "common/icons/neutral-64.png"
		},
		"default_panel": "watch/pages.htm",
		"browser_style": true
	},
	
	"options_ui": {
		"page": "watch/options.htm",
		"browser_style": true
	},
	
	"background": {
		"scripts": [
			"common/scripts/ioUtils.js", 
			"common/scripts/textUtils.js", 
			"common/scripts/configUtils.js", 			
			"common/scripts/tabUtils.js", 
			"common/scripts/pageUtils.js", 
			"common/scripts/watchUtils.js", 
			"scripts/background.js"
		]
	}
}